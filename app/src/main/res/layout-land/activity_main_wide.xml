    android:gravity="center_horizontal"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">


    <fragment
        android:id="@+id/fragment"
        android:name="com.example.fragments.fragment1"
